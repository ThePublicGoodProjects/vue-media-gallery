{
    "name"            : "@pgp/vue-media-gallery",
    "version"         : "0.0.1",
    "description"     : "A simple component to display media gallery assests for The Public Good Projects",
    "main"            : "dist/pgpVueMediaGallery.umd.min.js",
    "module"          : "dist/pgpVueMediaGallery.common.js",
    "unpkg"           : "dist/pgpDownloadCenter.umd.min.js",
    "author"          : "Cameron Wiley <cam.wiley@publicgoodprojects.org> https://publicgoodprojects.org",
    "license"         : "MIT",
    "scripts"         : {
        "serve"        : "vue-cli-service serve",
        "build"        : "vue-cli-service build",
        "build-bundle" : "vue-cli-service build --target lib --name pgpVueMediaGallery ./src/index.js",
        "lint"         : "vue-cli-service lint"
    },
    "files"           : [
        "dist/*",
        "src/*",
        "public/*",
        "*.json",
        "*.js"
    ],
    "dependencies"    : {
        "vue" : "^2.6.9"
    },
    "devDependencies" : {
        "@fortawesome/fontawesome-free" : "^5.7.1",
        "@vue/cli-plugin-babel"         : "^3.4.0",
        "@vue/cli-plugin-eslint"        : "^3.4.0",
        "@vue/cli-service"              : "^3.4.0",
        "axios"                         : "^0.18.0",
        "babel-eslint"                  : "^10.0.1",
        "eslint"                        : "^5.8.0",
        "eslint-plugin-vue"             : "^5.0.0",
        "foundation-sites"              : "^6.5.3",
        "jquery"                        : "^3.3.1",
        "lodash"                        : "^4.17.11",
        "micromodal"                    : "^0.3.2",
        "node-sass"                     : "^4.11.0",
        "sass-loader"                   : "^7.1.0",
        "vue-template-compiler"         : "^2.6.9"
    },
    "repository"      : {
        "type" : "git",
        "url"  : "https://github.com/ThePublicGoodProjects/vue-media-gallery.git"
    },
    "eslintConfig"    : {
        "root"          : true,
        "env"           : {
            "node" : true
        },
        "extends"       : [
            "plugin:vue/essential",
            "eslint:recommended"
        ],
        "rules"         : {},
        "parserOptions" : {
            "parser" : "babel-eslint"
        }
    },
    "postcss"         : {
        "plugins" : {
            "autoprefixer" : {}
        }
    },

    "browserslist"    : [
        "> 1%",
        "last 2 versions",
        "not ie <= 8"
    ]
}
